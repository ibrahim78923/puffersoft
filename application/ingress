apiVersion: networking.k8s.io/v1
kind: IngressRoute
metadata:
  name: foo
  namespace: frontend

spec:
  rules:
    - host: www.dreggystore.com
      http:
        paths:
          - path: /web
            pathType: Exact
            backend:
              service:
                name:  websvc
                port:
                  number: 80
          - path: /app
            pathType: Exact
            backend:
              service:
                name:  appsvc
                port:
                  number: 80
