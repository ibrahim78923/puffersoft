apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: foo
  namespace: frontend

spec:
  rules:
    - host: www.dreggystore.com
      http:
        paths:
          - path: /bar
            pathType: Exact
            backend:
              service:
                name:  websvc
                port:
                  number: 80
